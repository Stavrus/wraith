.container
  .row
    form(style='margin-bottom: 10px')
      input.form-control(type='text', ng-model='form.searchBox')
    table.table(ts-wrapper)
      thead
        tr
          th(ts-criteria='name') Name
          th(ts-criteria='team') Team
          th(width='70px', ts-criteria='tags_count', ts-default='descending') Tags
      tbody
        tr(ng-class='{danger: user.team == "Zombie"}', ng-repeat='user in filteredData | filter:"Zombie"', ts-repeat)
          td(style='word-wrap: break-word') {{ user.name }}
          td {{ user.team }}
          td {{ user.tags_count }}
        tr(ng-class='{danger: user.team == "Zombie"}', ng-repeat='user in filteredData | filter:"Human"', ts-repeat)
          td(style='word-wrap: break-word') {{ user.name }}
          td {{ user.team }}
          td {{ user.tags_count }}